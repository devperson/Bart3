<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoApp1.Pages.PopupPage">
  <Grid RowSpacing="0" Padding="0,20,0,0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition />
    </Grid.RowDefinitions>
    
    <StackLayout HeightRequest="50" BackgroundColor="Black">
      <Button Image="backArrow.jpg"  Clicked="btnBack_Clicked" WidthRequest="50" HeightRequest="50" HorizontalOptions="Start"/>      
    </StackLayout>

    <Label Text="Popup Page" TextColor="White" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"></Label>
    
    <Image Source="popup.jpg" Aspect="Fill" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.Row="1"/>
    <Label Text="This is the placeholder text" VerticalOptions="Center" HorizontalOptions="Center" TextColor="White" Grid.RowSpan="2"/>
  </Grid>
</ContentPage>